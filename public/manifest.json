{
  "short_name": "Cookie Helper",
  "name": "Lanqiao Cookie Helper",
  "description": "Build an Extension!",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "蓝桥 Cookie 助手"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "cookies", "tabs", "activeTab"],
  "host_permissions": [
    "*://*/*"
  ]
}
